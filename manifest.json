{
  "manifest_version": 3,
  "name": "Focus Now",
  "version": "1.0",
  "description": "Block access to distracting websites with scheduled time blocks",
  "permissions": ["storage", "declarativeNetRequest", "declarativeNetRequestWithHostAccess", "tabs", "alarms"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/blocked/blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
